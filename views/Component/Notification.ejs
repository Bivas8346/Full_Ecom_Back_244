<%- include ('../Common/Head')-%> <%- include ('../Common/Sidebar')-%>

<!-- ======== main-wrapper start =========== -->
<main class="main-wrapper">
  <%- include ('../Common/Navbar')-%>

  <!-- ========== notification-wrapper start ========== -->
  <div class="notification-wrapper">
    <div class="container-fluid">
      <!-- ========== title-wrapper start ========== -->
      <div class="title-wrapper pt-30">
        <div class="row align-items-center">
          <div class="col-md-6">
            <div class="title">
              <h2>Notifications</h2>
            </div>
          </div>
          <!-- end col -->
          <div class="col-md-6">
            <div class="breadcrumb-wrapper">
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item">
                    <a href="#0">Dashboard</a>
                  </li>
                  <li class="breadcrumb-item active" aria-current="page">
                    Notifications
                  </li>
                </ol>
              </nav>
            </div>
          </div>
          <!-- end col -->
        </div>
        <!-- end row -->
      </div>
      <!-- ========== title-wrapper end ========== -->

      <div class="card-style">
        <%if (contac.length>0){%> <%for(let noti of contac){%>
        <div class="single-notification">
          <div class="checkbox">
            <div class="form-check checkbox-style mb-20">
              <input
                class="form-check-input"
                type="checkbox"
                value=""
                id="checkbox-3"
              />
            </div>
          </div>
          <div class="notification">
            <div class="image danger-bg">
              <span>C</span>
            </div>
            <a href="#0" class="content">
              <h6><%=noti.about%></h6>
              <p class="text-sm text-gray"><%=noti.message%></p>
              <span class="text-sm text-medium text-gray">User gmail</span>
              <p class="text-sm text-gray"><%=noti.email%></p>
              <span class="text-sm text-medium text-gray">25 min ago</span>
            </a>
          </div>
          <div class="action">
            <a href="/notidelet/<%=noti._id%>" class="delete-btn">
              <i class="lni lni-trash-can"></i>
            </a>
            <button
              class="more-btn dropdown-toggle"
              id="moreAction"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              <i class="lni lni-more-alt"></i>
            </button>
            <ul
              class="dropdown-menu dropdown-menu-end"
              aria-labelledby="moreAction"
            >
              <li class="dropdown-item">
                <a href="#0" class="text-gray">Mark as Read</a>
              </li>
              <li class="dropdown-item">
                <a href="#0" class="text-gray">Reply</a>
              </li>
            </ul>
          </div>
        </div>
        <%}}else {%> No Data Found<%}%>
        <!-- end single notification -->
      </div>
    </div>
    <!-- end container -->
  </div>
  <!-- ========== notification-wrapper start ========== -->
  <%- include ('../Common/Footer')-%>
</main>
<!-- ======== main-wrapper end =========== -->
<%- include ('../Common/Foot')-%>
